<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content">
	    <Button 
	        android:id="@+id/btn_calenda_left"
	        android:layout_alignParentLeft="true"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="←←"/>
	    <Button 
	        android:id="@+id/btn_calenda_right"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="→→"/>
	    <Button 
	        android:id="@+id/btn_calenda_center"
	        android:layout_toLeftOf="@id/btn_calenda_right"
	        android:layout_toRightOf="@id/btn_calenda_left"
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="2013年11月21日 星期四"/>
	</RelativeLayout>
	<include layout="@layout/app_refresh_layout"/>
</LinearLayout>