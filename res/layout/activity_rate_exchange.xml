<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/app_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/app_background"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_low_background"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_current_rate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_middle_click"
                android:gravity="center_vertical"
                android:text="当前美元兑人名币的汇率："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_current_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_middle_click"
                android:gravity="center_vertical"
                android:text="黄金单位换算：1盎司=31.1035克"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_listmiddle_normal"
                    android:padding="12.0dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image_china"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="10.0dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_cny" />

                    <TextView
                        android:id="@+id/txt_china"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/image_china"
                        android:layout_toRightOf="@id/image_china"
                        android:text="@string/cny"
                        android:textColor="@color/black"
                        android:textSize="15.0sp" />

                    <EditText
                        android:id="@+id/edit_china"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/image_china"
                        android:layout_below="@id/txt_china"
                        android:layout_toRightOf="@id/image_china"
                        android:background="@color/white"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:text="0.0"
                        android:textColor="@color/saddle_brown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_listmiddle_normal"
                    android:padding="12.0dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image_usa"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="10.0dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_usd" />

                    <TextView
                        android:id="@+id/txt_usa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/image_usa"
                        android:layout_toRightOf="@id/image_usa"
                        android:text="@string/usd"
                        android:textColor="@color/black"
                        android:textSize="15.0sp" />

                    <EditText
                        android:id="@+id/edit_usa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/image_usa"
                        android:layout_below="@id/txt_usa"
                        android:layout_toRightOf="@id/image_usa"
                        android:background="@color/white"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:text="0.0"
                        android:textColor="@color/saddle_brown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_listmiddle_normal"
                    android:padding="12.0dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image_europe"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="10.0dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_eur" />

                    <TextView
                        android:id="@+id/txt_europe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/image_europe"
                        android:layout_toRightOf="@id/image_europe"
                        android:text="@string/eur"
                        android:textColor="@color/black"
                        android:textSize="15.0sp" />

                    <EditText
                        android:id="@+id/edit_europe"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/image_europe"
                        android:layout_below="@id/txt_europe"
                        android:layout_toRightOf="@id/image_europe"
                        android:background="@color/white"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:text="0.0"
                        android:textColor="@color/saddle_brown" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_middle_click"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="外盘"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/edit_waipan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2.5"
                                android:background="@drawable/main_input_bg"
                                android:editable="false"
                                android:gravity="center"
                                android:numeric="decimal"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center_vertical"
                                android:text="美元/盎司"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="内盘"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/edit_neipan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2.5"
                                android:background="@drawable/main_input_bg"
                                android:editable="false"
                                android:gravity="center"
                                android:numeric="decimal"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center_vertical"
                                android:text="元/千克"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_middle_click" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="对应平台"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="卖出价"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="买入价"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_middle_click" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="天通银"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_maichu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_mairu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
