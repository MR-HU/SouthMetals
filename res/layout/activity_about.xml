<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
    <include layout="@layout/app_title_bar"/>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:background="@drawable/app_background">
    	<ImageView
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:visibility="gone"
	    	android:background="@drawable/title_low_background"/>
	   	<com.innouni.south.widget.ReboundScrollView
	   		android:layout_width="fill_parent"
	   		android:layout_height="fill_parent"
	   		android:layout_margin="10.0dip"
	   		android:fadingEdge="none"
	   		android:scrollbars="none">
		   	<LinearLayout 
		   		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			    <RelativeLayout 
			    	android:id="@+id/lay_share_app"
			    	android:layout_width="fill_parent"
			    	android:layout_height="50.0dip"
			    	android:clickable="true"
			    	android:background="@drawable/list_middle_click">
			    	<TextView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_centerVertical="true"
			    		android:layout_marginLeft="5.0dip"
			    		android:text="@string/share_app"
			    		android:textColor="@color/black"
			    		android:textSize="18.0sp"/>
			    	<ImageView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_marginRight="7.0dip"
			    		android:layout_centerVertical="true"
			    		android:layout_alignParentRight="true"
			    		android:src="@drawable/list_arrow_selector"/>
			    </RelativeLayout>	
			    <RelativeLayout 
			    	android:id="@+id/lay_app_info"
			    	android:layout_width="fill_parent"
			    	android:layout_height="50.0dip"
			    	android:clickable="true"
			    	android:background="@drawable/list_middle_click">
			    	<TextView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_centerVertical="true"
			    		android:layout_marginLeft="5.0dip"
			    		android:text="@string/app_info"
			    		android:textColor="@color/black"
			    		android:textSize="18.0sp"/>
			    	<ImageView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_marginRight="7.0dip"
			    		android:layout_centerVertical="true"
			    		android:layout_alignParentRight="true"
			    		android:src="@drawable/list_arrow_selector"/>
			    </RelativeLayout>
			    <RelativeLayout 
			    	android:id="@+id/lay_feed_back"
			    	android:layout_width="fill_parent"
			    	android:layout_height="50.0dip"
			    	android:clickable="true"
			    	android:background="@drawable/list_middle_click">
			    	<TextView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_centerVertical="true"
			    		android:layout_marginLeft="5.0dip"
			    		android:text="@string/feed_back"
			    		android:textColor="@color/black"
			    		android:textSize="18.0sp"/>
			    	<ImageView 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_marginRight="7.0dip"
			    		android:layout_centerVertical="true"
			    		android:layout_alignParentRight="true"
			    		android:src="@drawable/list_arrow_selector"/>
			    </RelativeLayout>
		    </LinearLayout>
		</com.innouni.south.widget.ReboundScrollView>
	</LinearLayout>
</LinearLayout>
