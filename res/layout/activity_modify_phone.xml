<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    <include layout="@layout/app_title_bar"/>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:background="@drawable/app_background">
    	<ImageView 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@drawable/title_low_background"/>
    	<com.innouni.south.widget.ReboundScrollView 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_margin="10.0dip"
    		android:fadingEdge="none"
    		android:scrollbars="none">
    		<LinearLayout 
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:orientation="vertical">
    			<RelativeLayout 
    				android:layout_width="fill_parent"
    				android:layout_height="50.0dip"
    				android:background="@drawable/list_middle_click">
    				<TextView 
    					android:id="@+id/txt_original"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_centerVertical="true"
    					android:layout_marginRight="15.0dip"
    					android:text="@string/phone"
    					android:ems="4"
    					android:textColor="@color/black"
    					android:textSize="18.0sp"/>
    				<TextView 
    					android:id="@+id/edit_phone_modify"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:layout_centerVertical="true"
    					android:background="@color/white"
    					android:textColor="@color/blue"
    					android:enabled="false"
    					android:layout_toRightOf="@id/txt_original"/>
    			</RelativeLayout>
    			<RelativeLayout 
    				android:layout_width="fill_parent"
    				android:layout_height="50.0dip"
    				android:background="@drawable/list_middle_click">
    				<TextView 
    					android:id="@+id/txt_original"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_centerVertical="true"
    					android:layout_marginRight="15.0dip"
    					android:text="@string/new_phone"
    					android:ems="4"
    					android:textColor="@color/black"
    					android:textSize="18.0sp"/>
    				<EditText 
    					android:id="@+id/edit_new_phone"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:layout_centerVertical="true"
    					android:textColor="@color/blue"
    					android:background="@color/white"
    					android:inputType="phone"
    					android:singleLine="true"
    					android:imeOptions="actionDone"
    					android:layout_toRightOf="@id/txt_original"/>
    			</RelativeLayout>
    			<RelativeLayout 
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:padding="15.0dip"
    				android:background="@drawable/list_middle_click">
    				<Button 
    					android:id="@+id/btn_submit_phone"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:text="@string/submit"
    					android:textColor="@color/white"
    					android:textSize="20.0sp"
    					android:background="@drawable/test_update_btn_selector"/>
    			</RelativeLayout>
    		</LinearLayout>
    	</com.innouni.south.widget.ReboundScrollView>
    </LinearLayout>
</LinearLayout>

