<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    <include layout="@layout/app_title_bar"/>
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:background="@drawable/app_background">
    	<HorizontalScrollView 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:scrollbars="none">
	    	<LinearLayout 
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/title_high_background"
		    	android:orientation="horizontal">
		    	<TextView 
		    		android:id="@+id/txt_fast_info"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:text="@string/fast_info"
		    		android:textColor="@color/white"
		    		android:textSize="16.0sp"
		    		android:background="@drawable/title_btn_bg_orange_pressed"/>
		    	<TextView 
		    		android:id="@+id/txt_agency_comment"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:background="@drawable/title_btn_bg_orange_normal"
		    		android:text="@string/agency_comment"
		    		android:textSize="16.0sp"
		    		android:textColor="@color/white"/>
		    	<TextView 
		    		android:id="@+id/txt_market_news"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:background="@drawable/title_btn_bg_orange_normal"
		    		android:text="@string/fast_news"
		    		android:textSize="16.0sp"
		    		android:textColor="@color/white"/>
		    	<TextView 
		    		android:id="@+id/txt_forex_news"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/title_btn_bg_orange_normal"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:text="@string/forex_news"
		    		android:textSize="16.0sp"
		    		android:textColor="@color/white"/>
		    	<TextView 
		    		android:id="@+id/txt_world_finance"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/title_btn_bg_orange_normal"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:text="@string/world_finance"
		    		android:textSize="16.0sp"
		    		android:textColor="@color/white"/>
		    	<TextView 
		    		android:id="@+id/txt_famous_column"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/title_btn_bg_orange_normal"
		    		android:gravity="center"
		    		android:layout_gravity="center_vertical"
		    		android:text="@string/famous_column"
		    		android:textSize="16.0sp"
		    		android:textColor="@color/white"/>
		    </LinearLayout>
	    </HorizontalScrollView>
		<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_margin="12.0dip">
	    	<include layout="@layout/app_refresh_layout"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
