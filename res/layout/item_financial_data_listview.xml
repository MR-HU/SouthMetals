<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="33.0dip"
	android:orientation="vertical">
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="32.0dip"
		android:orientation="horizontal">
		<TextView 
	    	android:id="@+id/txt_financial_name"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="3"
	    	android:text="美元指数"
	    	android:textColor="@color/white"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	    <LinearLayout 
	    	android:layout_width="0.5dip"
	    	android:layout_height="fill_parent"
	    	android:background="@color/white"/>
	    <TextView 
	    	android:id="@+id/txt_financial_current"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="2.5"
	    	android:text="81.3600"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	    <LinearLayout 
	    	android:layout_width="0.5dip"
	    	android:layout_height="fill_parent"
	    	android:background="@color/white"/>
	    <TextView 
	    	android:id="@+id/txt_financial_open"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="2.5"
	    	android:text="81.4800"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	    <LinearLayout 
	    	android:layout_width="0.5dip"
	    	android:layout_height="fill_parent"
	    	android:background="@color/white"/>
	    <TextView 
	    	android:id="@+id/txt_financial_close"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="2.5"
	    	android:text="81.4800"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	    <LinearLayout 
	    	android:layout_width="0.5dip"
	    	android:layout_height="fill_parent"
	    	android:background="@color/white"/>
	    <TextView 
	    	android:id="@+id/txt_financial_up"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="2.5"
	    	android:text="-0.1200"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	    <LinearLayout 
	    	android:layout_width="0.5dip"
	    	android:layout_height="fill_parent"
	    	android:background="@color/white"/>
	    <TextView 
	    	android:id="@+id/txt_financial_percent"
	    	android:layout_width="0dip"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="2.5"
	    	android:text="-0.1473%"
	    	android:textSize="12.0sp"
	    	style="@style/data_financial_title_text"/>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="0.5dip"
		android:background="@color/white"/>
</LinearLayout>
