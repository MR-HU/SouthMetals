<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    <include layout="@layout/app_title_bar"/>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:background="@drawable/app_background">
    	<ImageView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:background="@drawable/title_low_background"/>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_margin="10.0dip">
			<RelativeLayout 
				android:layout_width="fill_parent"
				android:layout_height="50.0dip"
				android:background="@drawable/list_middle_click">
				<EditText 
					android:id="@+id/edit_email_phone"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="5.0dip"
					android:paddingRight="5.0dip"
					android:background="@color/white"
					android:hint="@string/input_tip"
					android:singleLine="true"
					android:imeOptions="actionDone"
					android:textColor="@color/blue"
					android:layout_centerVertical="true"/>
			</RelativeLayout>
			<RelativeLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/list_middle_click">
				<Button 
					android:id="@+id/btn_back_pwd"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/test_update_btn_selector"
					android:text="@string/next_step"
					android:textSize="20.0sp"
					android:textColor="@color/white"
					android:layout_centerVertical="true"
					android:gravity="center"
					android:layout_marginTop="10.0dip"
					android:layout_marginBottom="10.0dip"
					android:layout_marginRight="5.0dip"
					android:layout_marginLeft="5.0dip"/>
			</RelativeLayout>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
